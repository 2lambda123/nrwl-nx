{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "Schematics",
  "title": "",
  "type": "object",
  "examples": [
    {
      "command": "g @nrwl/nest:schematics new-class --type=class --project=nest-api",
      "description": "Generates a new class in the nest-api project"
    }
  ],
  "properties": {
    "type": {
      "type": "string",
      "description": "The Nest schematic to run",
      "enum": [
        "class",
        "controller",
        "decorator",
        "filter",
        "gateway",
        "guard",
        "interceptor",
        "interface",
        "middleware",
        "module",
        "pipe",
        "provider",
        "resolver",
        "service"
      ],
      "x-prompt": "What Nest schematic would you like to use?",
      "alias": "t"
    },
    "name": {
      "type": "string",
      "description": "The name of resulting Nest schematic file",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What name would you like to use?"
    },
    "project": {
      "type": "string",
      "description": "The nest project to target",
      "$default": {
        "$source": "projectName"
      },
      "alias": "p",
      "x-prompt": "What Nest project would you like to target?"
    },
    "unitTestRunner": {
      "type": "string",
      "enum": ["jest", "none"],
      "description": "Test runner to use for unit tests",
      "default": "jest"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the resulting files are placed",
      "alias": "d"
    }
  },
  "additionalProperties": true,
  "required": ["type", "name", "project"]
}
