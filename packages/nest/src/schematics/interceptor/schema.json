{
  "$schema": "http://json-schema.org/schema",
  "id": "NxNestInterceptor",
  "title": "Create a Nest Interceptor in a project for Nx",
  "type": "object",
  "examples": [
    {
      "command": "g interceptor myinterceptor --project=myproject",
      "description": "Generate libs/myproject"
    }
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Interceptor name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the interceptor?"
    },
    "project": {
      "type": "string",
      "description": "A project where the interceptor is placed",
      "alias": "p"
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint", "tslint"],
      "default": "tslint"
    },
    "unitTestRunner": {
      "type": "string",
      "enum": ["jest", "none"],
      "description": "Test runner to use for unit tests",
      "default": "jest"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name"]
}
