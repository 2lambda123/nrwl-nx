{
  "$schema": "http://json-schema.org/schema",
  "id": "NxNestController",
  "title": "Create a Nest Controller in a project for Nx",
  "type": "object",
  "examples": [
    {
      "command": "g controller mycontroller --project=myproject",
      "description": "Generate libs/myproject"
    }
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Controller name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the controller?"
    },
    "project": {
      "type": "string",
      "description": "A project where the controller is placed",
      "alias": "p"
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint", "tslint"],
      "default": "tslint"
    },
    "unitTestRunner": {
      "type": "string",
      "enum": ["jest", "none"],
      "description": "Test runner to use for unit tests",
      "default": "jest"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    },
    "service": {
      "type": "boolean",
      "default": false,
      "description": "Include a service with the controller"
    }
  },
  "required": ["name"]
}
