{
  "extends": "../../.eslintrc",
  "rules": {
    "no-restricted-imports": [
      "error",
      "@nx/workspace",
      "@angular-devkit/core",
      "@angular-devkit/architect",
      "@angular-devkit/schematics"
    ]
  },
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["./package.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredDependencies": [
              "nx",
              "tslib",
              "typescript",
              "eslint",
              // Test-only
              "memfs",
              // Installed to workspace
              "@angular-eslint/eslint-plugin"
            ]
          }
        ]
      }
    }
  ]
}
