{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= offsetFromRoot %><%= outputPath %>",
    "declaration": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"<% if (js) { %>, "src/**/*.js"<% } %>],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"<% if (js) { %>, "src/**/*.spec.js", "src/**/*.test.js"<% } %>]
}
